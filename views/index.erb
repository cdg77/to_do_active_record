<div class="jumbotron">
  <h1>To Do</h1>

  <% if @tasks.any?() %>
  <p>Here are all your tasks:</p>

  <ul>
    <%  @tasks.not_done().each() do |task| %>
      <li><%= task.description %> <a href="/tasks/<%= task.id()%>/edit">Update Description</a></li>
    <% end %>
  </ul>
  <% else %>

  <div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <h4><strong>RELAX!</strong>  You have nothing TO DO!</h4>
  <h3 class="text-primary">
    <strong></strong>
  </h3>

</div>

<% end %>

</div>


<form class="form-horizontal" action="/tasks" method="post">
  <fieldset>
    <p class='text-muted'>Create a new task: </p>

    <label for="description">Description</label>
    <input type="text" name="description">

    <button class="btn btn-primary" type="submit">ADD Task</button>

  </form>
</fieldset>
